.ac_content{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: row;
}
/* 左侧列表 */
.left_side{
  width: 26vw;
  height: 100%;
}
/* 内容 */
.center_content{
  width: 74vw;
  height: 100%;
  background: white;
  display: flex;
  flex-direction: column;
}
/* 首版展示图片 */
.ac_start{
  height: 100%;
}
.ac_start image{
  width: 100%;
  height: 100%;
}
/* 经脉名称 */
.me_name{
  color: black;
  font-size: .8rem;
  width: auto;
  line-height: 2rem;
  border-bottom: .1rem solid #999999;
  padding: .4rem .1rem;
  text-align: center;
}

/* 穴位名称 */
.ac_name{
  color: black;
  font-size: .8rem;
  line-height: 1.4rem;
  display: flex;
  justify-content: center;
  padding: .4rem .2rem;
  border-bottom: .1rem solid #cde6c7;
}
.ac_img image{
  width: 76vw;
}
/* 穴位列表收展 */

.list_show{
  display: flex;
}
.list_hidden{
  display: none;
}
/* 5.28
 * 穴位细节描述 
 */
.ac_detail{
  display: flex;
  flex-flow: column wrap;
  margin: .2rem;
}
/* 穴位待更新 */
.wait_up{
  display: flex;
  margin: 24vh auto;
  color: #c63c26;
}
.ac_item{
  display: flex;
  padding: 1rem;
}
.item_label{
  color: #45b97c;
}
.ac_acu{
  font-size: 1.6rem;
  line-height: 2rem;
  border-bottom: .1rem solid #867892;
  display: flex;
  justify-content: center;
}
